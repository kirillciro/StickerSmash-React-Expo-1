{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "ES2017", "ES2018", "DOM"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noResolve": false,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./components/**/*.ts", 
    "./components/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/node_modules/**/*",
    "**/__mocks__/*",
    "**/__tests__/*"
  ]
}
